{
  "name": "mobilisation-backend",
  "version": "0.1.0",
  "description": "Backend skeleton for Mobilisation - NestJS-like + TypeORM",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -n",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "etl:run": "ts-node -r tsconfig-paths/register src/etl/cli.ts",
    "etl:start": "npm run start",
    "mlflow:server": "mlflow server --backend-store-uri sqlite:///mlflow.db --default-artifact-root ./mlruns --host 0.0.0.0 --port 5000",
    "test:models": "jest --config=jest.model.config.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@bull-board/api": "^4.5.0",
    "@bull-board/express": "^4.5.0",
    "@bull-board/ui": "^4.5.0",
    "@google/genai": "^1.27.0",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.1.7",
    "@nestjs/core": "^11.1.7",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "bullmq": "^5.63.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-vault": "^0.10.9",
    "nodemailer": "^6.9.5",
    "openai": "^4.12.0",
    "pg": "^8.0.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^3.7.0",
    "swagger-ui-express": "^4.6.2",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.0",
    "jest": "^29.6.1",
    "node-cron": "^3.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.9.5",
    "winston": "^3.9.0",
    "zod": "^3.22.2"
  }
}
