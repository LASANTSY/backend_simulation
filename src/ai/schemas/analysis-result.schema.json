{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AnalysisResultFromLLM",
  "type": "object",
  "additionalProperties": false,
  "required": ["prediction", "interpretation", "risks", "opportunities", "recommendations", "confidence", "metadata"],
  "properties": {
    "prediction": {
      "type": "object",
      "additionalProperties": false,
      "required": ["summary", "values"],
      "properties": {
        "summary": { "type": "string", "minLength": 1 },
        "values": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["key", "value"],
            "properties": {
              "key": { "type": "string" },
              "value": { "type": "number" },
              "horizon": { "type": "string" }
            }
          }
        }
      }
    },
    "interpretation": { "type": "string", "minLength": 1 },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["description", "probability"],
        "properties": {
          "factor": { "type": "string" },
          "description": { "type": "string" },
          "probability": { "type": "number", "minimum": 0, "maximum": 1 },
          "impact": { "type": "string", "enum": ["low", "medium", "high"] }
        }
      }
    },
    "opportunities": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["description", "impact"],
        "properties": {
          "description": { "type": "string" },
          "impact": { "type": "number" }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["action", "priority"],
        "properties": {
          "action": { "type": "string" },
          "priority": { "type": "integer", "minimum": 1 }
        }
      }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "time": { "type": ["string", "null"] },
        "weather": { "type": ["string", "null"] },
        "economy": { "type": "object" },
        "demography": { "type": "object" }
      }
    }
  }
}
